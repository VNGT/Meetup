{
  "name": "let-meet",
  "version": "1.0.0",
  "description": "An mobile app allow client to join or create event",
  "main": "index.js",
  "scripts": {
    "lint:server": "eslint server-side/src/*.js"
  },
  "author": "VNGT",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "git pull origin master"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint client-side/src/*.js --fix-dry-run",
      "eslint server-side/src/*.js --fix-dry-run"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
