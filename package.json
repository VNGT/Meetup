{
  "name": "let-meet",
  "version": "1.0.0",
  "description": "An mobile app allow client to join or create event",
  "main": "index.js",
  "scripts": {
    "lint:server": "eslint server-side/src/",
    "lint:client": "eslint client-side/src/"
  },
  "author": "VNGT",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:server && npm run lint:client",
      "pre-push": "git pull origin master"
    }
  },
  "lint-staged": {
    "server-side/src/*.{js,jsx,ts,tsx,json,css}": [
      "prettier --write",
      "eslint server-side/src"
    ]
  },
  "dependencies": {
    "@react-native-community/eslint-config": "0.0.7",
    "dotenv": "^8.2.0"
  }
}
